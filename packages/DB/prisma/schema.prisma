generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String  @id @default(uuid())
  email       String  @unique
  password    String
  name        String
  photo       String?
  favorite    Room[]  @relation("FavoriteRooms")
  chats       Chat[]
  rooms       Room[]  @relation("AdminRooms")
  memberRooms Room[]  @relation("MemberRooms")
}

model Room {
  id          Int      @id @default(autoincrement())
  slug        String   @unique
  createdAt   DateTime @default(now())
  adminId     String
  photo       String?
  favoritedBy User[]   @relation("FavoriteRooms")
  chats       Chat[]
  admin       User     @relation("AdminRooms", fields: [adminId], references: [id])
  members     User[]   @relation("MemberRooms")
}

model Chat {
  id      Int    @id @default(autoincrement())
  roomId  Int
  message String
  userId  String
  room    Room   @relation(fields: [roomId], references: [id])
  user    User   @relation(fields: [userId], references: [id])
}
